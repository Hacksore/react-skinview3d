{
  "compilerOptions": {
    "declaration": true,
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "sourceMap": true,
    "jsx": "react-jsx",
    "outDir": "dist",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.tsx"],
  "exclude": [
    "node_modules",
    "build",
    ".storybook",
    "**/*.stories.tsx",
    "**/*.stories.ts"
  ]
}
